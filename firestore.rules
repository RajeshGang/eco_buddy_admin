rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Admins collection - only admins can read/write (no public sign-up)
    match /admins/{adminId} {
      // Only existing admins can read/write admin documents
      allow read, write: if isAdmin();
    }
    
    // Users collection - admins can read all, users can read/write their own
    match /users/{userId} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      // Allow admins to query users collection
      allow list: if isAdmin();
    }
    
    // Analytics collection - admins can read/write
    match /analytics/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Feature flags - admins can read/write, authenticated users can read
    match /feature_flags/{flagId} {
      allow read: if isAdmin() || request.auth != null;
      allow write: if isAdmin();
    }
    
    // Products collection - admins can read/write, all authenticated users can read
    match /products/{productId} {
      allow read: if isAdmin() || request.auth != null;
      allow write: if isAdmin();
    }
    
    // Scans collection - admins can read all, users can read/write their own
    match /scans/{scanId} {
      allow read: if isAdmin() || 
                     (request.auth != null && 
                      resource.data.userId == request.auth.uid);
      allow write: if request.auth != null && 
                     request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
      allow list: if isAdmin() || request.auth != null;
    }
    
    // Sustainability assessments - admins can read all, users can read/write their own
    match /sustainability_assessments/{assessmentId} {
      allow read: if isAdmin() || 
                     (request.auth != null && 
                      resource.data.userId == request.auth.uid);
      allow write: if request.auth != null && 
                     request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
      allow list: if isAdmin() || request.auth != null;
    }
    
    // User profiles - admins can read all, users can read/write their own
    match /user_profiles/{userId} {
      allow read: if isAdmin() || request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Leaderboard collection - admins can read all, users can read/write their own
    match /leaderboard/{userId} {
      allow read: if isAdmin() || request.auth != null;
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow create: if request.auth != null;
    }
    
    // Receipts collection - temporarily permissive for debugging
    // Allow all authenticated users to read/write (we'll restrict after confirming structure)
    match /receipts/{receiptId} {
      allow read, write: if isAdmin() || request.auth != null;
      allow create: if request.auth != null;
      allow list: if isAdmin() || request.auth != null;
    }
    
    // Receipts subcollections - for scores, items, analysis, etc.
    match /receipts/{receiptId}/{document=**} {
      allow read, write: if isAdmin() || request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Progress collection - temporarily permissive for debugging
    // Allow all authenticated users to read/write (we'll restrict after confirming structure)
    match /progress/{progressId} {
      allow read, write: if isAdmin() || request.auth != null;
      allow create: if request.auth != null;
      allow list: if isAdmin() || request.auth != null;
    }
    
    // User progress (if stored by userId as document ID)
    match /user_progress/{userId} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Receipt history (if stored by userId as document ID)
    match /receipt_history/{userId} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow create: if request.auth != null;
    }
    
    // Receipt history subcollection (if receipts are stored under users)
    match /users/{userId}/receipts/{receiptId} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow create: if request.auth != null;
    }
    
    // Progress subcollection (if progress is stored under users)
    match /users/{userId}/progress/{progressId} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow create: if request.auth != null;
    }
    
    // Progress subcollections - for any nested data
    match /progress/{progressId}/{document=**} {
      allow read, write: if isAdmin() || request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Scores collection - for calculating scores
    match /scores/{scoreId} {
      allow read, write: if isAdmin() || request.auth != null;
      allow create: if request.auth != null;
      allow list: if isAdmin() || request.auth != null;
    }
    
    // Calculations collection - for score calculations
    match /calculations/{calculationId} {
      allow read, write: if isAdmin() || request.auth != null;
      allow create: if request.auth != null;
      allow list: if isAdmin() || request.auth != null;
    }
    
    // User scores (if stored by userId as document ID)
    match /user_scores/{userId} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow create: if request.auth != null;
    }
    
    // Score breakdowns or analytics
    match /score_breakdown/{breakdownId} {
      allow read, write: if isAdmin() || request.auth != null;
      allow create: if request.auth != null;
      allow list: if isAdmin() || request.auth != null;
    }
    
    // Subcollections under progress for scores
    match /progress/{progressId}/scores/{scoreId} {
      allow read, write: if isAdmin() || request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Subcollections under users for scores
    match /users/{userId}/scores/{scoreId} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow create: if request.auth != null;
    }
    
    // Receipt analysis or breakdown collections
    match /receipt_analysis/{analysisId} {
      allow read, write: if isAdmin() || request.auth != null;
      allow create: if request.auth != null;
      allow list: if isAdmin() || request.auth != null;
    }
    
    // Receipt items collection
    match /receipt_items/{itemId} {
      allow read, write: if isAdmin() || request.auth != null;
      allow create: if request.auth != null;
      allow list: if isAdmin() || request.auth != null;
    }
    
    // Temporary: Allow authenticated users to access any collection for debugging
    // TODO: Remove this and add specific rules once we identify all collections
    match /{collection}/{document=**} {
      // Allow if user is authenticated (for debugging - will restrict later)
      allow read, write: if isAdmin() || request.auth != null;
      allow create: if request.auth != null;
      allow list: if request.auth != null;
    }
  }
}

